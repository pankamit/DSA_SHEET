## https://leetcode.com/contest/weekly-contest-460/problems/maximum-median-sum-of-subsequences-of-size-3/


class Solution {
    public long maximumMedianSum(int[] arr) {
        int n = arr.length;
        Arrays.sort(arr);

        //int div = n/3;
        long sum = 0L;
        int i = 0;
        int j = n-2;

        
        while(i < j){
            sum += arr[j];    
            i++;
            j=j-2;
        }
        

        return sum;
        
    }
}
