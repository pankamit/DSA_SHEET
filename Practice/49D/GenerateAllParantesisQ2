package com.app.day49;

import java.awt.desktop.OpenFilesEvent;
import java.util.ArrayList;
import java.util.List;

public class GenerateAllParantesisQ2 {

    public static void main(String[] args) {
        int n = 1;//3;

        List<String> resLst = new ArrayList<>();
        traverse(0,n,0,0,"",resLst);
        System.out.println("resLst "+resLst);
    }

    static void traverse(int pos,int n,int open,int close,String res,List<String> resLst){

        if(pos == 2*n){
            resLst.add(res);
            return;
        }

        // try (
        if(open < n) {
            traverse(pos + 1, n, open + 1, close, res + "(", resLst);
        }
        // try )
        if(close < n && close < open) {
            traverse(pos + 1, n, open, close+1, res + ")", resLst);
        }


    }
}
