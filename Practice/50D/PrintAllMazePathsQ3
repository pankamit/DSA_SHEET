package com.app.day50;

import java.util.ArrayList;
import java.util.List;

public class PrintAllMazePathsQ3 {

    public static void main(String[] args) {

        int n = 1;//3;
        int m = 2;//2;


        List<String> resLst = new ArrayList<>();

        traverse(0,0,n,m,"",resLst);
        System.out.println("All Maze Paths "+resLst);
    }

    static void traverse(int sr,int sc,int n,int m,String res,List<String> resLst){

        if(sr == n-1 && sc == m-1){
            resLst.add(res);
            return ;
        }

        //int[][] dir = {{1,0},{0,1}};

        int min = Integer.MAX_VALUE;

        // Mave to Down
        int new_r = sr+1;
        int new_c = sc;

        if(new_r < n) {
            traverse(new_r, new_c,  n, m,res+"D",resLst);
        }

        // Mave to Right
        new_r = sr;
        new_c = sc+1;

        if(new_c < m) {
            traverse(new_r, new_c,  n, m,res+"R",resLst);
        }

    }
}
