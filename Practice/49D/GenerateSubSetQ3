package com.app.day49;

import java.util.ArrayList;
import java.util.List;

public class GenerateSubSetQ3 {

    public static void main(String[] args) {
        int[] arr = {1,2,3}; //{1};

        List<String> resLst = new ArrayList<>();

        traverse(arr,0,"",resLst);

        System.out.println("res "+resLst);
    }

    public static void traverse(int[] arr,int pos,String res,List<String> resLst){

        // Base Condition
        if(pos == arr.length){
            resLst.add(res);
            return;
        }


        //not pick
        traverse(arr,pos+1,res,resLst);

        // pick
        traverse(arr,pos+1,res+arr[pos],resLst);


    }
}
