package com.app.day53BST;

class Node{
    int data;
    Node left;
    Node right;

    Node(int data){
        this.data = data;
    }
}

public class PathSumBTQ2 {

    public static void main(String[] args) {

        /*Node node = new Node(5);
        node.left = new Node(4);
        node.left.left = new Node(11);
        node.left.left.left = new Node(7);
        node.left.left.right = new Node(2);

        node.right = new Node(8);
        node.right.left = new Node(13);
        node.right.right = new Node(4);
        node.right.right.right = new Node(1);*/

        Node node = new Node(5);
        node.left = new Node(4);
        node.left.left = new Node(-11);

        node.right = new Node(8);
        node.right.left = new Node(-13);
        node.right.right = new Node(4);

        int B = -1; //22;

        if(traverse(node,B)){
            System.out.println("Path Exists");
        }else{
            System.out.println("Path doesn't Exists");
        }


    }

    static boolean traverse(Node node,int B){

        if(node == null) {
            if (B == 0) {
                return true;
            }else{
                return false;
            }
        }

        if(traverse(node.left,B-node.data)){
            return true;
        }

        if(traverse(node.right,B-node.data)){
            return true;
        }

        return false;
    }
}
