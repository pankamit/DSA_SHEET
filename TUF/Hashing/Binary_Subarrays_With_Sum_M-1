## https://takeuforward.org/plus/dsa/sliding-window-and-2-pointer/counting-subarrays-and-substrings-problems/binary-subarrays-with-sum

class Solution {
    public int numSubarraysWithSum(int[] arr, int tar) {
        //your code goes here
        int n = arr.length;

        HashMap<Integer,Integer> hm = new HashMap<>();
        hm.put(0,1);

        int cnt = 0;

        int sum = 0;

        for(int ind=0;ind<n;ind++){
            sum += arr[ind];
            int diff = sum - tar;
            cnt += hm.getOrDefault(diff,0); 
            hm.put(sum,hm.getOrDefault(sum,0)+1);
        }

        return cnt;
    }
}
