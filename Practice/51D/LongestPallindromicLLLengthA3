package com.app.day51;

public class LongestPallindromicLLLengthA3 {

    public static void main(String[] args) {

        /*Node node = new Node(2);
        node.next = new Node(3);
        node.next.next = new Node(3);
        node.next.next.next = new Node(3);*/

        Node node = new Node(2);
        node.next = new Node(1);
        node.next.next = new Node(2);
        node.next.next.next = new Node(1);
        node.next.next.next.next = new Node(2);
        node.next.next.next.next.next = new Node(2);
        node.next.next.next.next.next.next = new Node(1);
        node.next.next.next.next.next.next.next = new Node(3);
        node.next.next.next.next.next.next.next.next = new Node(2);
        node.next.next.next.next.next.next.next.next.next = new Node(2);

        Node curr = node;
        Node prev = null;

        int max = 0;
        while(curr != null){
            Node next = curr.next;
            curr.next = prev;

            prev = curr;
            curr = next;

            // even

            int len = 2*countCommon(curr,prev);
            max = Math.max(max,len);
            // odd
            len = 2*countCommon(curr,prev.next)+1;
            max = Math.max(max,len);

        }

        System.out.println("max "+max);

    }

    public static int countCommon(Node node1,Node node2){

        int count = 0;

        while(node1 != null && node2 != null){
            if(node1.data != node2.data){
                return count;
            }
            count++;
            node1 = node1.next;
            node2 = node2.next;
        }

        return count;
    }
}
